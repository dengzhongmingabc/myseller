botton-1px($color)
  position relative
  &::after
     position absolute
     left:0px
     bottom 0px
     width 100%
     border-top  1px solid $color
     content ''
background-pic($name)
  background:url($name+'@2x.png') no-repeat
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
      background:url($name+'@3x.png') no-repeat

background-pic-big($name)
  background:url($name+'@2x.png') no-repeat
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background:url($name+'@3x.png') no-repeat
